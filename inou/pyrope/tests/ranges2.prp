// code/ranges2.prp
seq = (1..9)

start  = seq[0..2]
middle = seq[3..-2]
end    = seq[-2..]
copy   = seq[..]

I(start  == (1,2,3))
I(middle == (4,5,6,7))
I(end    == (8,9))
I(copy   == (1,2,3,4,5,6,7,8,9))

val = 0b11_01_10_00
I(0..2 == (0,1,2))

I(val[[2..0]]   == val[[(2,1,0)]] == 0b000)
I(val[[0..2]]   == val[[(2,1,0)]] == 0b000)
I(val[[-1]]     == val[[-1]]      == 0b1)   // MSB
I(val[[-1..-3]] == val[[(-1,-2,-3)]]== 0b110)
I(val[[-1..1]]  == val[[(1,0,-1)]]== 0b001)

I((1..3) * (2,2,2) == (2,4,6))
I((1..3) + (2,2,2) == (3,4,5))
I((1..3) + 2 == (3..5))  // compile error
I((1,2,4) ++ 3 == (1..4))
